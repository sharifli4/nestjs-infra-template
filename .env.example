# ==============================================================================
# Application Configuration
# ==============================================================================
NODE_ENV=development
PORT=3000
CORS_ORIGINS=https://app.example.com,https://admin.example.com

# ==============================================================================
# Optional Features - Enable/Disable as needed
# ==============================================================================
# Set to 'true' to enable each feature, or 'false' (or remove) to disable

# Enable PostgreSQL database with MikroORM
USE_DATABASE=true

# Enable Redis caching
USE_REDIS=true

# Enable HashiCorp Vault for secret management (production)
USE_VAULT=false

# ==============================================================================
# Vault Configuration (Only used if USE_VAULT=true)
# ==============================================================================
VAULT_ADDR=http://127.0.0.1:8200
VAULT_TOKEN=root
SECRET_PATH=project-name
MOUNT_PATH=secret

# ==============================================================================
# Database Configuration (Only used if USE_DATABASE=true)
# ==============================================================================
DB_NAME=project_db
DB_HOST=localhost
DB_PORT=5432
DB_USER=project_user
DB_PASSWORD=superpassword
DB_USE_CONNECTION_POOLER=false
DB_SSL=false

# ==============================================================================
# Redis Configuration (Only used if USE_REDIS=true)
# ==============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_USER=
REDIS_PASSWORD=

# ==============================================================================
# JWT Configuration
# ==============================================================================
JWT_ACCESS_TOKEN_SECRET=your-access-token-secret-change-me-in-production
JWT_ACCESS_TOKEN_EXPIRES_IN=15m
JWT_REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-me-in-production
JWT_REFRESH_TOKEN_EXPIRES_IN=7d

# ==============================================================================
# Logger Configuration
# ==============================================================================
LOG_LEVEL=debug
LOG_FORMAT=pretty
LOG_SENSITIVE_FIELDS=password,refreshToken,accessToken,apiKey,secret,token
ERROR_LOG_EXCHANGE=error-logs
LOG_EXCLUDE_PATHS=/api/v1/health,/health

# ==============================================================================
# HashID Configuration (Optional - for ID obfuscation)
# ==============================================================================
HASHID_SALT=your-hashid-salt-change-me-in-production
HASHID_MIN_LENGTH=10

# ==============================================================================
# File Storage Configuration (Optional)
# ==============================================================================
FILE_STORAGE_URL=https://media.example.com/storage

# Azure Blob Storage (if using)
# AZURE_STORAGE_ACCOUNT_NAME=your-account-name
# AZURE_STORAGE_ACCOUNT_KEY=your-account-key
# AZURE_STORAGE_CONTAINER_NAME=your-container-name

# ==============================================================================
# External Services (Optional)
# ==============================================================================
# SMS_API_KEY=your-sms-api-key
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-password
